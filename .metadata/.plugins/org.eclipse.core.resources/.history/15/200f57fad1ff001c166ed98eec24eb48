package while_loop;

import java.util.Scanner;

public class SumOfNEvenNo {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int i =1;
		int sum =0;
		while(i<=n) {
		if(n%2==0)	{
			i=i+1;
				sum = sum +i;
				
			}
			System.out.println(sum);
		}
			
		
	}

}

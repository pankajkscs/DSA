package while_loop;

import java.util.Scanner;

public class SumOfNEvenNo {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		int sum = 0;
		int evenNumber =2;
		int i =1;
		while(i <=n) {
			sum =sum+evenNumber;
			evenNumber = evenNumber+2;
			i=i+1;
			
		}
		System.out.println(sum);
		
		
	
}
}
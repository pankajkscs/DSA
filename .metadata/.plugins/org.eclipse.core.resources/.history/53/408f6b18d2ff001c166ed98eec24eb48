package while_loop;

import java.util.Scanner;

public class SumOfNEvenNo {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int i =2;
		int sum =0;
		while(i<=n) {
		if(n%2==0)	{
			i=i+2;
				sum = sum +2;
				
			}
			//System.out.println(sum);
		}
			
		System.out.println(sum);
	}

}
